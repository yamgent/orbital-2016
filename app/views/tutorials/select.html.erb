<div class="container">
  <h1>Tutorials Selection (Step 1 of 2)</h1>

  <div class="row">
    <div class="col-md-6">
      <p>Select slots that you wish to ballot.
        <a href="rank" class="btn btn-primary">Next</a>
      </p>
    </div>

    <div class="col-md-6">
      <div class="checkbox">
        <label>
          <input type="checkbox" checked>
          Show slots that clashes with lectures
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>ABC123 Tutorials</h2>

      <div class="card-columns">

        <div class="card text-xs-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Monday 17:00 - 19:00</p>
            </blockquote>
          </div>
        </div>

        <div class="card text-xs-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Tuesday 17:00 - 19:00</p>
            </blockquote>
          </div>
        </div>

        <div class="card text-xs-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Wednesday 17:00 - 19:00</p>
            </blockquote>
          </div>
        </div>

        <div class="card text-xs-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Thursday 09:00 - 11:00</p>
            </blockquote>
          </div>
        </div>

        <div class="card text-xs-center">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Thursday 17:00 - 19:00</p>
              <footer>[Lecture Clashes!]</footer>
            </blockquote>
          </div>
        </div>

        <div class="card text-xs-center card-success card-inverse">
          <div class="card-block">
            <blockquote class="card-blockquote">
              <p>Friday 17:00 - 19:00</p>
            </blockquote>
          </div>
        </div>

      </div>
    </div>

    <div class="col-md-6">
      <h3>Timetable Preview</h3>
      <%= render 'layouts/timetable_preview' %>
    </div>
  </div>
</div>
