<div class="container">
  <%= javascript_include_tag 'tutorials_rank' %>
  <h1>Tutorials Selection (Step 2 of 2)</h1>

  <div class="row">
    <p>Rank your preferences.
      <a href="save" class="btn btn-primary">Save</a>
    </p>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table" id="tutorial-list">
        <thead>
          <tr>
            <th>#</th>
            <th>Module</th>
            <th>Type</th>
            <th>Day</th>
            <th>Time</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>ABC123</td>
            <td>Tutorial</td>
            <td>Monday</td>
            <td>09:00 - 11:00</td>
          </tr>

          <tr>
            <th scope="row">1</th>
            <td>ABC123</td>
            <td>Tutorial</td>
            <td>Tuesday</td>
            <td>09:00 - 11:00</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <h3>Timetable Preview</h3>
      <%= render 'layouts/timetable_preview' %>
    </div>
  </div>
</div>
