<table id="timetable-preview">
	<thead>
		<tr>
			<th colspan="1"><div>0800</div></th>
			<% for i in 9..23 do %>
				<th colspan="2"><div><%= sprintf('%02d', i) %>00</div></th>
			<% end %>
			<th colspan="2"><div>0000</div></th>
		</tr>
	</thead>
	
	<tbody>
		<% @days = [ "mon", "tue", "wed", "thu", "fri" ] %>
		<% @days.each do |day| %>
			<tr>
				<th><div><%= day %></div></th>
				<% for i in 8..23 do %>
					<td id="<%= day %>_<%= sprintf('%02d', i) %>00"></td>
					<td id="<%= day %>_<%= sprintf('%02d', i) %>30"></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

