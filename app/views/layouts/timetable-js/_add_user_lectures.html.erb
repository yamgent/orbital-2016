<%= javascript_tag do %>

  <% @user.courses.each do |c| %>
    <% c.lectures.each do |lec|  %>
      Timetable().addPeriod(
        "lecture-<%= lec.id %>",
        <%= lec.day %>,
        <%= getHourAndMinAsInt(lec.start_time) %>,
        <%= getHourAndMinAsInt(lec.end_time) %>,
        "<%= c.code %>",
        "<%= c.name %>",
        PeriodTypes.LECTURE
      ).togglePeriodStyle("lecture-<%= lec.id %>", "selected");
    <% end %>
  <% end %>

<% end %>
