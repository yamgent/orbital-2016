<table id="timetable">
	<thead>
		<tr>
			<th colspan="1"><div>8</div></th>
			<% for i in 9..23 do %>
				<th colspan="2"><div><%= i %></div></th>
			<% end %>
			<th colspan="2"><div></div></th>
		</tr>
	</thead>

	<tbody>
		<% [ "sun", "mon", "tue", "wed", "thu", "fri", "sat" ].each do |day| %>
			<tr>
				<!-- just use the first letter -->
				<th><div><%= day[0] %></div></th>
				<% for i in 8..23 do %>
					<td id="<%= day %>-<%= i %>00"></td>
					<td id="<%= day %>-<%= i %>30"></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<%= javascript_include_tag 'timetable' %>
